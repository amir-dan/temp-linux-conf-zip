{
    "position": "bottom",
    "height": 38,
    "modules-left": [
        "custom/menu",
        "sway/workspaces",
        "custom/cpu-icon",
        "cpu",
        "custom/memory-icon",
        "memory",
        "custom/disk-icon",
        "disk",
    ],
    "modules-center": [
        "mpd#icon",
        "mpd",
    ],
    "modules-right": [
        "sway/mode",
        "custom/functions",
        "custom/language-icon",
        "sway/language",
        "pulseaudio#icon",
        "pulseaudio",
        "custom/clock-icon",
        "clock",
        "custom/io",
    ],
    "custom/menu": {
        "format" : "",
        "tooltip": false,
        "on-click": "exec bash ~/Apps/functions/01.sh",
    },
    "sway/workspaces": {
        "format": "{name}",
        "disable-scroll": true,
    },
    "custom/cpu-icon": {
        "format": "",
        "tooltip": false,
    },
    "cpu": {
        "interval": 1,
        "format": "{usage}%",
        "tooltip": false,
    },
    "custom/memory-icon": {
        "format": "",
        "tooltip": false,
    },
    "memory": {
        "interval": 1,
        "format": "{used}GiB",
        "tooltip": false,
    },
    "custom/disk-icon": {
        "format": "",
        "tooltip": false,
    },
    "disk": {
        "interval": 30,
        "format": "{used}",
        "tooltip": false,
        "path": "/",
    },
    "mpd#icon": {
        "interval": 1,
        "format": "",
        "format-disconnected": "",
        "format-stopped": "",
        "tooltip": false,
        "on-click": "exec bash ~/Apps/functions/06.sh",
        "on-click-middle": "exec bash ~/Apps/functions/07.sh",
        "on-click-right": "exec bash ~/Apps/functions/08.sh",
    },
    "mpd": {
        "interval": 1,
        "format": "{artist} - {title}",
        "format-disconnected": "Disconnected",
        "format-stopped": "Stopped",
        "tooltip": false,
        "on-click": "exec bash ~/Apps/functions/06.sh",
        "on-click-middle": "exec bash ~/Apps/functions/07.sh",
        "on-click-right": "exec bash ~/Apps/functions/08.sh",
    },
    "sway/mode": {
        "format": "{}",
        "tooltip": false,
    },
    "custom/functions": {
        "format" : "",
        "tooltip": false,
        "on-click": "exec bash ~/Apps/functions/02.sh",
        "on-click-middle": "exec bash ~/Apps/functions/04.sh",
        "on-click-right": "exec bash ~/Apps/functions/03.sh",
    },
    "custom/language-icon": {
        "format": "",
        "tooltip": false,
        "on-click": "exec bash ~/Apps/functions/10.sh",
    },
    "sway/language": {
        "format": "{short}",
        "tooltip": false,
        "on-click": "exec bash ~/Apps/functions/10.sh",
    },
    "pulseaudio#icon": {
        "format": "{icon}",
        "format-icons": {
            "default": [
                "",
                "",
                "",
            ],
        },
        "format-muted": "",
        "tooltip": false,
        "on-click": "exec bash ~/Apps/functions/05.sh",
        "scroll-step": 0,
    },
    "pulseaudio": {
        "format": "{volume}%",
        "format-muted": "Muted",
        "tooltip": false,
        "on-click": "exec bash ~/Apps/functions/05.sh",
        "scroll-step": 0,
    },
    "custom/clock-icon": {
        "format" : "",
        "tooltip": false,
    },
    "clock": {
        "interval": 30,
        "format": "{:%H:%M}",
        "format-alt": "{:%Y-%m-%d}",
        "tooltip": false,
    },
    "custom/io": {
        "format" : "",
        "tooltip": false,
        "on-click-middle": "exec bash ~/Apps/functions/09.sh",
    },
}
